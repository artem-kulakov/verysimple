= form_for @period do |f|
  - if @period.errors.any?
    #error_explanation
      %h2= "#{pluralize(@period.errors.count, "error")} prohibited this period from being saved:"
      %ul
        - @period.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :period
    = f.date_select :period
  .actions
    = f.submit 'Save'
