- @title = 'Dates'

.row
  .col-xs-12

    %h1 Listing dates

    .table-responsive
      %table.table.table-inverse.dark-background
        %thead
          %tr
            %th Date
            %th
        %tbody
          - @periods.each do |period|
            %tr
              %td= period.period
              %td.text-xs-right.text-nowrap
                = link_to 'Edit', edit_period_path(period), :class => 'btn btn-success btn-sm'
                = link_to 'Delete', period, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger btn-sm'

    = link_to 'New date', new_period_path, class: 'btn btn-primary'
