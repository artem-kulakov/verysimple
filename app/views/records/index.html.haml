%h1 Listing records

%table
  %thead
    %tr
      %th Company
      %th
      %th
      %th

  %tbody
    - @records.each do |record|
      %tr
        %td= record.company
        %td= link_to 'Show', record
        %td= link_to 'Edit', edit_record_path(record)
        %td= link_to 'Destroy', record, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Record', new_record_path

.grid
  = render 'sidebar_menu'
  = render partial: 'record_grid', locals: { records: @records }
