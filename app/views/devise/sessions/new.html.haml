- @title = 'Log in'

.login-form-container
  .heading-container
    %h1 Log in

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-group
      = f.label :email, class: 'form-control-label'
      = f.email_field :email, {class: "form-control", autofocus: true}

    .form-group
      = f.label :password, class: 'form-control-label'
      = f.password_field :password, {class: "form-control", autocomplete: 'off'}

    - if devise_mapping.rememberable?
      .form-group.form-control-label
        = f.check_box :remember_me
        = f.label :remember_me

    .form-group
      = f.submit 'Log in', class: 'btn btn-primary'
      = link_to "Forgot your password?", new_password_path(resource_name), class: 'btn btn-link'

    .form-group
      = link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-link'
