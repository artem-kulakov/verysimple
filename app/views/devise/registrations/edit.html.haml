- @title = 'Edit user'

.login-form-container
  .heading-container
    %h1= @title

  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email, class: 'form-control-label'
      = f.email_field :email, {class: "form-control", autofocus: true}

    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %div
        Currently waiting confirmation for: #{resource.unconfirmed_email}

    .form-group
      = f.label "Password (leave blank if you don't want to change it)", class: 'form-control-label'
      = f.password_field :password, {class: "form-control", autocomplete: 'off'}
      - if @minimum_password_length
        %small.min-length
          = @minimum_password_length
          characters minimum

    .form-group
      = f.label :password_confirmation, class: 'form-control-label'
      = f.password_field :password_confirmation, {class: "form-control", autocomplete: 'off'}

    .form-group
      = f.label :current_password, class: 'form-control-label'
      = f.password_field :current_password, {class: "form-control", autocomplete: 'off'}

    .form-group
      = f.submit "Update", class: 'btn btn-primary'
      = link_to "Back", :back, class: 'btn btn-secondary'

    .form-group
      = link_to 'Cancel my account', registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'

