- @title = 'Sign up'

.login-form-container
  .heading-container
    %h1 Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    - unless devise_error_messages!.empty?
      .alert.alert-danger= devise_error_messages!
    .form-group
      = f.label :email, class: 'form-control-label'
      = f.email_field :email, {class: "form-control", autofocus: true}

    .form-group
      = f.label :password, class: 'form-control-label'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      = f.password_field :password, {class: "form-control", autocomplete: 'off'}

    .form-group
      = f.label :password_confirmation, class: 'form-control-label'
      = f.password_field :password_confirmation, {class: "form-control", autocomplete: 'off'}

    .form-group
      = f.submit 'Sign up', class: 'btn btn-primary'
      = link_to "Log in", new_session_path(resource_name), class: 'btn btn-link'
