.row
	.col-xs-12

		%h1 Simple table

		%table.table.table-inverse.table-bordered
			%thead
				%tr
					%th
					- @indicators.each do |indicator|
						%th.text-xs-right= indicator.name
			%tbody
				- @reports.each do |report|
					%tr
						%td= report.company_name
						- @indicators.each do |indicator|
							%td.text-xs-right= number_with_delimiter(@values.amount(report.id, indicator.id), delimiter: ",")

		= link_to 'Add', new_report_path, class: 'btn btn-primary'