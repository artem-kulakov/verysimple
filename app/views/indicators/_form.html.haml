= form_for @indicator do |f|
  - if @indicator.errors.any?
    #error_explanation.alert.alert-danger
      = "#{pluralize(@indicator.errors.count, "error")} prohibited this indicator from being saved:"
      %ul
        - @indicator.errors.full_messages.each do |msg|
          %li= msg

  .form-group.row
    = f.label :name, class: 'col-xs-4 form-control-label'
    .col-xs-8.col-sm-4
      = f.text_field :name, class: 'form-control', :autofocus => true
      = f.hidden_field :order, value: @indicator.order
  
  .form-group.row
    = f.label :industry, class: 'col-xs-4 form-control-label'
    .col-xs-8.col-sm-4
      = f.select :industry_id, options_from_collection_for_select(@industries, :id, :name, @industry_id), {}, {class: "form-control c-select"}

  .form-group.row
    .col-xs-4
    .col-xs-8
      = f.submit 'Save', class: "btn btn-#{@color}"
      = link_to 'Cancel', indicators_path(industry: @industry_id), class: 'btn btn-secondary'
